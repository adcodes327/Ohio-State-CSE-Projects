/**
 * Lab 3: Practice with strings with the goal of printing name, counting the letters
 * and printing out a greeting and goodbye message.
 * @20200121
 */
import java.util.Scanner;

public class FunWithStringsIntro {

    public static void main(String[] args) {
    	String userName = "";
    	System.out.println("Enter your name: ");
    	Scanner scnr = new Scanner(System.in);
    	userName = scnr.nextLine();
    	
    	int length = userName.length();
    	char first = userName.charAt(0);
    	char last = userName.charAt(userName.length()-1);
     
		
      System.out.println("Hello " + userName + "!");
      System.out.println("Your name is " + length + " letters long");
      System.out.println("Your name starts with a: " + first);
      System.out.println("Your name ends with a: " + last);
      System.out.println("Goodbye!");
        
        

        scnr.close();
    }
}
